<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div name="multi_company" position="after">
                <div id="helpdesk">
                    <h2>Helpdesk</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="text-muted">
                                    Default Project for Helpdesk
                                </div>
                                <div class="content-group">
                                    <div class="mt16" >
                                        <label for="support_project_id" string="Project" class="col-xs-3 col-md-3 o_light_label"/>
                                        <field name="support_project_id" class="oe_inline"/>
                                    </div>
                                    <div class="mt16">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="text-muted">
                                    Default Invoice Product for Helpdesk Ticket
                                </div>
                                <div class="content-group">
                                    <div class="mt16" >
                                        <label for="support_invoice_product_id" string="Product" class="col-xs-3 col-md-3 o_light_label"/>
                                        <field name="support_invoice_product_id" class="oe_inline"/>
                                    </div>
                                    <div class="mt16">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="text-muted">
                                    Default Timesheet Invoice Product for Helpdesk Ticket
                                </div>
                                <div class="content-group">
                                    <div class="mt16" >
                                        <label for="support_timesheet_invoice_product_id" string="Product" class="col-xs-3 col-md-3 o_light_label"/>
                                        <field name="support_timesheet_invoice_product_id" class="oe_inline"/>
                                    </div>
                                    <div class="mt16">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
       </field>
   </record>
</odoo>
